// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// A user allowed to generate orders and delivery events
model User {
  id                  String   @id
  created             DateTime @default(now())
  updated             DateTime @default(now())
  name                String
  email               String   @unique
  password_hash       String
  last_authentication DateTime

  created_orders          Order[]
  created_delivery_events DeliveryEvent[]

  @@map("user")
}

/// A order generated by the user
model Order {
  id               String   @id
  created          DateTime @default(now())
  updated          DateTime @default(now())
  creator_id       String
  customer_name    String
  delivery_address String
  status           String

  creator User            @relation(fields: [creator_id], references: [id])
  events  DeliveryEvent[]

  @@index(type: BTree, fields: [status])
  @@map("order")
}

/// A delivery event that updates the order status
model DeliveryEvent {
  id         String   @id
  created    DateTime @default(now())
  creator_id String
  order_id   String
  status     String
  message    String?

  creator User  @relation(fields: [creator_id], references: [id])
  order   Order @relation(fields: [order_id], references: [id])

  @@map("delivery_event")
}
